{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "region": {
      "type": "string"
    },
    "clientWebAppRegion": {
      "type": "string"
    },
    "appServicePlanName": {
      "type": "string"
    },
    "apiWebAppName": {
      "type": "string"
    },
    "clientWebAppName": {
      "type": "string"
    },
    "mainDatabaseName": {
      "type": "string"
    },
    "sandboxDatabaseName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "appInsightsName": {
      "type": "string"
    },
    "tenantId": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('appServicePlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "location": "[parameters('region')]",
      "sku": {
        "name": "S1"
      },
      "properties": {}
    },
    {
      "name": "[parameters('apiWebAppName')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "location": "[parameters('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverFarms', parameters('appServicePlanName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', parameters('appServicePlanName'))]",
        "httpsOnly": true
      }
    },
        {
      "apiVersion": "2021-02-01",
      "name": "[parameters('clientWebAppName')]",
      "type": "Microsoft.Web/staticSites",
      "location": "[parameters('clientWebAppRegion')]",
      "properties": {
        "provider": "GitHub",
        "repositoryUrl": "https://github.com/luillo1/RaceResults",
        "branch": "main",
      "sku": {
        "Tier": "Standard",
        "Name": "Standard"
      }
    },
    {
      "name": "[parameters('mainDatabaseName')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2021-06-15",
      "location": "[parameters('region')]",
      "properties": {
        "createMode": "Default",
        "databaseAccountOfferType": "Standard",
        "capabilities": [
          {
            "name": "EnableServerless"
          }
        ],
        "locations": [
          {
            "locationName": "[parameters('region')]",
            "failoverPriority": 0
          }
        ]
      }
    },
    {
      "name": "[parameters('sandboxDatabaseName')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2021-06-15",
      "location": "[parameters('region')]",
      "properties": {
        "createMode": "Default",
        "databaseAccountOfferType": "Standard",
        "capabilities": [
          {
            "name": "EnableServerless"
          }
        ],
        "locations": [
          {
            "locationName": "[parameters('region')]",
            "failoverPriority": 0
          }
        ]
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('region')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[parameters('tenantId')]",
        "accessPolicies": [],
        "enableRbacAuthorization": true
      }
    },
    {
      "type": "Microsoft.Insights/Components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('appInsightsName')]",
      "location": "[parameters('region')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    }
  ]
}
